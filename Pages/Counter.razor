@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<svg width="400" height="400" style="border:1px solid #000;">
    <circle cx="200" cy="200" r="100" fill="blue" />
</svg>

<svg width="400" height="400" style="border:1px solid #000;">
    <rect x="150" y="150" width="100" height="100" fill="green" />
</svg>

<svg width="400" height="400" style="border:1px solid #000;">
    <circle cx="200" cy="200" r="50" fill="blue">
        <animate 
            attributeName="fill" 
            values="blue;red;blue" 
            dur="2s" 
            repeatCount="indefinite" />
    </circle>
</svg>

<h3>Animate SVG on Button Click</h3>

<button @onclick="ToggleAnimation">Animate Square</button>

<svg width="400" height="400" style="border:1px solid #000;">
    <!-- Updated rect element with conditional class -->
    <rect id="animatedSquare" class="square @(isAnimated ? "animated" : "")" x="150" y="150" width="100" height="100" fill="green" />
</svg>

<style>
    .square {
        transition: transform 0.5s ease, fill 0.5s ease;
    }

    .animated {
        transform: scale(1.5);
        fill: orange;
    }
</style>

@code {
    private bool isAnimated;

    private void ToggleAnimation()
    {
        isAnimated = !isAnimated;
    }

    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
